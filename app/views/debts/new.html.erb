<div class="row">
  <div class="col-xs-12">
    <h1>Adicionar Novo Pagamento <%= link_to 'Voltar', usuario_path, class: 'btn btn-warning' %></h1>
  </div>

  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <%= form_for [current_user, @debt] do |f| %>
      <%= render 'fields', f: f %>

      <%= f.submit 'Salvar', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
