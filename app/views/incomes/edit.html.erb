<div class="row">
  <div class="col-xs-12">
    <h1>Editar Receita: <%= @income.name %> <%= link_to 'Voltar', receitas_path, class: 'btn btn-warning' %></h1>
  </div>

  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <%= form_for [current_user, @income] do |f| %>
      <%= render 'fields', f: f %>

      <%= f.submit 'Salvar', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
